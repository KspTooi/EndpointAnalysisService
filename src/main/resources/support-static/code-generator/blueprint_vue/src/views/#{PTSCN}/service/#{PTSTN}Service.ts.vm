import { onMounted, reactive, ref, type Ref } from "vue";
import type { FormInstance, FormRules } from "element-plus";
import type {
  Get${ptstn}ListDto,
  Get${ptstn}ListVo,
  Get${ptstn}DetailsVo,
  Add${ptstn}Dto,
  Edit${ptstn}Dto,
} from "@/views/${ptscn}/api/${ptstn}Api.ts";
import ${ptstn}Api from "@/views/${ptscn}/api/${ptstn}Api.ts";
import { Result } from "@/commons/entity/Result";
import { ElMessage, ElMessageBox } from "element-plus";

/**
 * 模态框模式类型
 */
type ModalMode = "add" | "edit";

export default {
  /**
   * ${comment}列表管理
   */
  use${ptstn}List() {
    const listForm = ref<Get${ptstn}ListDto>({
      pageNum: 1,
      pageSize: 20,
#foreach($field in $fields)
#if(!$field.primaryKey && $field.pfscn != "createTime" && $field.pfscn != "updateTime" && $field.pfscn != "creatorId" && $field.pfscn != "updaterId" && $field.pfscn != "deleteTime")
      ${field.pfscn}: #if($field.type == "number")null#else""#end,
#end
#end
    });

    const listData = ref<Get${ptstn}ListVo[]>([]);
    const listTotal = ref(0);
    const listLoading = ref(false);

    /**
     * 加载列表
     */
    const loadList = async () => {
      listLoading.value = true;
      const result = await ${ptstn}Api.get${ptstn}List(listForm.value);

      if (Result.isSuccess(result)) {
        listData.value = result.data;
        listTotal.value = result.total;
      }

      if (Result.isError(result)) {
        ElMessage.error(result.message);
      }

      listLoading.value = false;
    };

    /**
     * 重置查询
     */
    const resetList = () => {
      listForm.value.pageNum = 1;
      listForm.value.pageSize = 20;
#foreach($field in $fields)
#if(!$field.primaryKey && $field.pfscn != "createTime" && $field.pfscn != "updateTime" && $field.pfscn != "creatorId" && $field.pfscn != "updaterId" && $field.pfscn != "deleteTime")
      listForm.value.${field.pfscn} = #if($field.type == "number")null#else""#end;
#end
#end
      loadList();
    };

    /**
     * 删除记录
     */
    const removeList = async (row: Get${ptstn}ListVo) => {
      try {
        await ElMessageBox.confirm("确定删除该条记录吗？", "提示", {
          confirmButtonText: "确定",
          cancelButtonText: "取消",
          type: "warning",
        });
      } catch (error) {
        return;
      }

      try {
        await ${ptstn}Api.remove${ptstn}({ id: row.id });
        ElMessage.success("删除成功");
        await loadList();
      } catch (error: any) {
        ElMessage.error(error.message);
      }
    };

    onMounted(async () => {
      await loadList();
    });

    return {
      listForm,
      listData,
      listTotal,
      listLoading,
      loadList,
      resetList,
      removeList,
    };
  },

  /**
   * 模态框管理（统一处理新增和编辑）
   */
  use${ptstn}Modal(modalFormRef: Ref<FormInstance | undefined>, reloadCallback: () => void) {
    const modalVisible = ref(false);
    const modalLoading = ref(false);
    const modalMode = ref<ModalMode>("add");
    const modalForm = reactive<Get${ptstn}DetailsVo>({
#foreach($field in $fields)
      ${field.pfscn}: #if($field.type == "number")0#elseif($field.type == "boolean")false#else""#end,
#end
    });

    /**
     * 表单验证规则
     */
    const modalRules: FormRules = {
#foreach($field in $fields)
#if(!$field.primaryKey && $field.pfscn != "createTime" && $field.pfscn != "updateTime" && $field.pfscn != "creatorId" && $field.pfscn != "updaterId" && $field.pfscn != "deleteTime")
#if($field.required)
      ${field.pfscn}: [{ required: true, message: "请输入${field.comment}", trigger: "blur" }],
#end
#end
#end
    };

    /**
     * 打开模态框
     * @param mode 模式: 'add' | 'edit'
     * @param row 编辑时传入的行数据
     */
    const openModal = async (mode: ModalMode, row: Get${ptstn}ListVo | null) => {
      modalMode.value = mode;

      if (mode === "add") {
#foreach($field in $fields)
        modalForm.${field.pfscn} = #if($field.type == "number")0#elseif($field.type == "boolean")false#else""#end;
#end
        modalVisible.value = true;
        return;
      }

      if (mode === "edit") {
        if (!row) {
          ElMessage.error("未选择要编辑的数据");
          return;
        }

        try {
          const details = await ${ptstn}Api.get${ptstn}Details({ id: row.id });
#foreach($field in $fields)
          modalForm.${field.pfscn} = details.${field.pfscn};
#end
          modalVisible.value = true;
        } catch (error: any) {
          ElMessage.error(error.message);
        }
      }
    };

    /**
     * 重置模态框
     */
    const resetModal = () => {
      if (!modalFormRef.value) {
        return;
      }
      modalFormRef.value.resetFields();
#foreach($field in $fields)
      modalForm.${field.pfscn} = #if($field.type == "number")0#elseif($field.type == "boolean")false#else""#end;
#end
    };

    /**
     * 提交模态框
     */
    const submitModal = async () => {
      if (!modalFormRef.value) {
        return;
      }

      try {
        await modalFormRef.value.validate();
      } catch (error) {
        return;
      }

      modalLoading.value = true;

      if (modalMode.value === "add") {
        try {
          const addDto: Add${ptstn}Dto = {
#foreach($field in $fields)
#if(!$field.primaryKey && $field.pfscn != "createTime" && $field.pfscn != "updateTime" && $field.pfscn != "creatorId" && $field.pfscn != "updaterId" && $field.pfscn != "deleteTime")
            ${field.pfscn}: modalForm.${field.pfscn},
#end
#end
          };
          await ${ptstn}Api.add${ptstn}(addDto);
          ElMessage.success("新增成功");
          modalVisible.value = false;
          resetModal();
          reloadCallback();
        } catch (error: any) {
          ElMessage.error(error.message);
        }
        modalLoading.value = false;
        return;
      }

      if (modalMode.value === "edit") {
        if (!modalForm.id) {
          ElMessage.error("缺少ID参数");
          modalLoading.value = false;
          return;
        }

        try {
          const editDto: Edit${ptstn}Dto = {
#foreach($field in $fields)
#if($field.primaryKey)
            ${field.pfscn}: modalForm.${field.pfscn},
#elseif($field.pfscn != "createTime" && $field.pfscn != "updateTime" && $field.pfscn != "creatorId" && $field.pfscn != "updaterId" && $field.pfscn != "deleteTime")
            ${field.pfscn}: modalForm.${field.pfscn},
#end
#end
          };
          await ${ptstn}Api.edit${ptstn}(editDto);
          ElMessage.success("编辑成功");
          modalVisible.value = false;
          resetModal();
          reloadCallback();
        } catch (error: any) {
          ElMessage.error(error.message);
        }
        modalLoading.value = false;
      }
    };

    return {
      modalVisible,
      modalLoading,
      modalMode,
      modalForm,
      modalRules,
      openModal,
      resetModal,
      submitModal,
    };
  },
};
